<!doctype html>
<html lang="{{.Meta.Lang}}">
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-color: {{if .Meta.PrimaryColor}}{{.Meta.PrimaryColor}}{{else}}#2c3e50{{end}};
        --accent-color: {{if .Meta.AccentColor}}{{.Meta.AccentColor}}{{else}}#c0784a{{end}};
      }
      @page {
        size: A4;
        margin: 0;
        padding: 0;
      }
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      html {
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
      html,
      body {
        width: 210mm;
        min-height: 297mm;
        font-family: "Open Sans", sans-serif;
        font-size: 11pt;
        line-height: 1.4;
        color: #333;
        background: #fff;
      }
      /* Fixed background stripe for sidebar - repeats on all pages */
      html::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 38%;
        height: 100%;
        background: var(--primary-color);
        z-index: 0;
      }
      .container {
        display: flex;
        width: 100%;
        position: relative;
        z-index: 1;
      }

      /* Sidebar */
      .sidebar {
        width: 38%;
        color: white;
        padding: 30px 24px;
        flex-shrink: 0;
      }
      .sidebar a {
        color: white;
        text-decoration: none;
      }
      .sidebar a:hover {
        text-decoration: underline;
      }
      .photo {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid rgba(255, 255, 255, 0.2);
        margin: 0 auto 24px;
        display: block;
      }
      .sidebar h2 {
        font-size: 14pt;
        font-weight: 600;
        margin-bottom: 12px;
        padding-bottom: 6px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
      }
      .sidebar section {
        margin-bottom: 24px;
        break-inside: avoid;
        page-break-inside: avoid;
      }
      .sidebar p,
      .sidebar li {
        font-size: 10pt;
        line-height: 1.6;
      }
      .sidebar ul {
        list-style: none;
      }
      .sidebar li {
        margin-bottom: 4px;
      }
      .sidebar li::before {
        content: " ";
        opacity: 0.7;
      }
      .lang-item {
        margin-bottom: 4px;
        font-size: 10pt;
      }
      .additional-info p {
        margin-bottom: 4px;
      }
      .reference-item {
        margin-bottom: 12px;
      }
      .reference-item strong {
        display: block;
        margin-bottom: 2px;
      }
      .reference-item p {
        font-size: 9pt;
        opacity: 0.8;
        line-height: 1.4;
      }

      /* Main */
      .main {
        width: 62%;
        padding: 30px 32px;
        min-height: 297mm;
        background: #fff;
        flex-grow: 1;
      }
      .header {
        text-align: center;
        margin-bottom: 20px;
      }
      .name {
        font-size: 26pt;
        font-weight: 400;
        color: var(--primary-color);
        margin-bottom: 4px;
      }
      .job-title {
        font-size: 14pt;
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 12px;
      }
      .summary {
        font-size: 10pt;
        color: #4a5568;
        text-align: justify;
        line-height: 1.6;
      }
      .main h2 {
        font-size: 13pt;
        font-weight: 600;
        color: var(--primary-color);
        padding-bottom: 6px;
        border-bottom: 2px solid var(--accent-color);
        margin-bottom: 14px;
        break-after: avoid;
        page-break-after: avoid;
      }
      .main section {
        margin-bottom: 20px;
      }

      /* Experience */
      .experience {
        margin-bottom: 14px;
        break-inside: avoid;
        page-break-inside: avoid;
      }
      .exp-title {
        font-size: 11pt;
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 2px;
      }
      .exp-company {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 10pt;
        color: #4a5568;
        margin-bottom: 4px;
        flex-wrap: wrap;
      }
      .company-logo {
        width: 18px;
        height: 18px;
        object-fit: contain;
        flex-shrink: 0;
        border-radius: 3px;
      }
      .company-name {
        font-weight: 500;
      }
      a.company-name {
        color: #4a5568;
        text-decoration: none;
      }
      a.company-name:hover {
        text-decoration: underline;
      }
      .exp-details {
        font-size: 9pt;
        color: #6b7280;
        font-style: italic;
        margin-bottom: 4px;
      }
      .exp-missions {
        padding-left: 16px;
        font-size: 9pt;
        color: #4a5568;
        margin-top: 4px;
      }
      .exp-missions li {
        margin-bottom: 2px;
      }

      /* Projects */
      .project {
        margin-bottom: 14px;
        break-inside: avoid;
        page-break-inside: avoid;
      }
      .project-header {
        display: flex;
        align-items: center;
        gap: 6px;
        margin-bottom: 2px;
      }
      .project-logo {
        width: 18px;
        height: 18px;
        object-fit: contain;
        flex-shrink: 0;
        border-radius: 3px;
      }
      .project-title {
        font-size: 11pt;
        font-weight: 600;
        color: var(--primary-color);
        text-decoration: none;
      }
      .project-title:hover {
        text-decoration: underline;
        cursor: pointer;
      }
      .project-description {
        font-size: 10pt;
        color: #4a5568;
      }
      .exp-summary {
        font-size: 9pt;
        color: #4a5568;
        margin-top: 4px;
        text-align: justify;
        line-height: 1.5;
      }

      /* Education */
      .edu-item {
        font-size: 10pt;
        color: #4a5568;
        margin-bottom: 8px;
        break-inside: avoid;
        page-break-inside: avoid;
      }
      .edu-degree {
        font-weight: 500;
      }
      .edu-score {
        font-size: 9pt;
        color: #6b7280;
      }
      .edu-courses {
        font-size: 9pt;
        color: #6b7280;
        font-style: italic;
      }

      /* Awards */
      .award-item {
        font-size: 10pt;
        color: #4a5568;
        margin-bottom: 8px;
        break-inside: avoid;
        page-break-inside: avoid;
      }
      .award-title {
        font-weight: 500;
      }
      .award-summary {
        font-size: 9pt;
        color: #6b7280;
        margin-top: 2px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <aside class="sidebar">
        {{if .Basics.Image}}
        <img src="{{safeURL .Basics.Image}}" alt="Photo" class="photo" />
        {{end}}

        <section>
          <h2>{{.Labels.Socials}}</h2>
          {{if .Basics.Phone}}<p><a href="tel:{{.Basics.Phone}}">{{.Basics.Phone}}</a></p>{{end}}
          {{if .Basics.Email}}<p><a href="mailto:{{.Basics.Email}}">{{.Basics.Email}}</a></p>{{end}}

          {{if or .Basics.URL .Basics.Profiles}}
          <div style="margin-top: 2px">
            {{if .Basics.URL}}
            <p><a href="{{.Basics.URL}}">{{trimURLPrefix .Basics.URL}}</a></p>
            {{end}}
            {{range .Basics.Profiles}}
            <p><a href="{{.URL}}">{{trimURLPrefix .URL}}</a></p>
            {{end}}
          </div>
          {{end}}

          {{if or .Basics.Location.Address .Basics.Location.City}}
          <div style="margin-top: 2px">
            {{if .Basics.Location.Address}}
            <p style="margin-top: 8px">{{.Basics.Location.Address}}</p>
            {{end}}
            {{if .Basics.Location.PostalCode}}
            <p>{{.Basics.Location.PostalCode}} {{.Basics.Location.City}}</p>
            {{else if .Basics.Location.City}}
            <p>{{displayLocation .Basics.Location}}</p>
            {{end}}
          </div>
          {{end}}

          {{if .Basics.BirthDate}}
          <p style="margin-top: 4px">{{formatDate "2 January 2006" .Basics.BirthDate .Meta.Lang}}</p>
          {{end}}
          {{if .Basics.Nationality}}
          <p style="margin-top: 4px">{{.Basics.Nationality}}</p>
          {{end}}
          {{if .Meta.WorkPermit}}
          <p style="margin-top: 4px">{{.Meta.WorkPermit}}</p>
          {{end}}
        </section>

        {{if .Skills}}
        <section>
          <h2>{{.Labels.Skills}}</h2>
          <ul>
            {{range .Skills}}
            <li>{{.Name}}</li>
            {{end}}
          </ul>
        </section>
        {{end}}

        {{if .SoftSkills}}
        <section>
          <h2>{{.Labels.SoftSkills}}</h2>
          <ul>
            {{range .SoftSkills}}
            <li>{{.Name}}</li>
            {{end}}
          </ul>
        </section>
        {{end}}

        {{if .Languages}}
        <section>
          <h2>{{.Labels.Languages}}</h2>
          <ul>
            {{range .Languages}}
            <li class="lang-item">{{.Language}} ({{.Fluency}})</li>
            {{end}}
          </ul>
        </section>
        {{end}}

        {{if or .Meta.ActivityRate .Meta.Availability}}
        <section>
          <h2>{{.Labels.AdditionalInfo}}</h2>
          <div class="additional-info">
            {{if .Meta.ActivityRate}}
            <p>{{.Labels.ActivityRate}}: {{.Meta.ActivityRate}}</p>
            {{end}}
            {{if .Meta.Availability}}
            <p>{{.Labels.Availability}}: {{.Meta.Availability}}</p>
            {{end}}
          </div>
        </section>
        {{end}}

        {{if .References}}
        <section>
          <h2>{{.Labels.References}}</h2>
          {{range .References}}
          <div class="reference-item">
            <strong>{{.Name}}</strong>
            <p>{{.Reference}}</p>
          </div>
          {{end}}
        </section>
        {{end}}

        {{if .Interests}}
        <section>
          <h2>{{.Labels.Interests}}</h2>
          {{range .Interests}}
          <p>{{.Name}}</p>
          {{end}}
        </section>
        {{end}}
      </aside>

      <main class="main">
        <header class="header">
          <h1 class="name">{{.Basics.Name}}</h1>
          {{if .Basics.Label}}
          <p class="job-title">{{.Basics.Label}}</p>
          {{end}}
          {{if .Basics.Summary}}
          <p class="summary">{{.Basics.Summary}}</p>
          {{end}}
        </header>

        {{if .Work}}
        <section>
          <h2>{{.Labels.Experiences}}</h2>
          {{range .Work}}
          <div class="experience">
            <p class="exp-title">{{.Position}}</p>
            <p class="exp-company">
              {{if .CompanyLogo}}
              <img
                src="{{safeURL .CompanyLogo}}"
                alt="{{.Company}}"
                class="company-logo"
              />
              {{end}}
              {{if .CompanyURL}}<a href="{{safeURL .CompanyURL}}" class="company-name">{{.Company}}</a>{{else}}<span class="company-name">{{.Company}}</span>{{end}}{{if .Location}} - {{.Location}}{{end}}
              {{if .StartDate}} ({{formatDate "January 2006" .StartDate $.Meta.Lang}}{{if or .EndDate $.Labels.Present}} - {{end}}{{if .EndDate}}{{formatDate "January 2006" .EndDate $.Meta.Lang}}{{else}}{{$.Labels.Present}}{{end}}){{end}}{{if .ContractType}} · {{.ContractType}}{{end}}
            </p>
            {{if or .StackDetails .TeamDetails}}
            <p class="exp-details">
              {{if .TeamDetails}}{{.TeamDetails}}{{end}}{{if and .TeamDetails .StackDetails}} · {{end}}{{if .StackDetails}}{{.StackDetails}}{{end}}
            </p>
            {{end}}
            {{if .Summary}}
            <p class="exp-summary">{{.Summary}}</p>
            {{end}}
            {{if .Highlights}}
            <ul class="exp-missions">
              {{range .Highlights}}{{if .}}
              <li>{{.}}</li>
              {{end}}{{end}}
            </ul>
            {{end}}
          </div>
          {{end}}
        </section>
        {{end}}

        {{if .Education}}
        <section>
          <h2>{{.Labels.Education}}</h2>
          {{range .Education}}
          <div class="edu-item">
            <p>
              <span class="edu-degree">{{.StudyType}} {{.Area}}</span>
              – {{.Institution}}{{if .Location}}, {{.Location}}{{end}}
              {{if .StartDate}}({{formatDate "2006" .StartDate $.Meta.Lang}}{{if or .EndDate $.Labels.Present}} - {{end}}{{if .EndDate}}{{formatDate "2006" .EndDate $.Meta.Lang}}{{else}}{{$.Labels.Present}}{{end}}){{end}}
            </p>
            {{if .Score}}<p class="edu-score">{{.Score}}</p>{{end}}
            {{if .Courses}}
            <p class="edu-courses">{{range $i, $c := .Courses}}{{if $i}}, {{end}}{{$c}}{{end}}</p>
            {{end}}
          </div>
          {{end}}
        </section>
        {{end}}

        {{if .Certificates}}
        <section>
          <h2>{{.Labels.Certificates}}</h2>
          {{range .Certificates}}
          <p class="edu-item">
            <span class="edu-degree">{{.Title}}</span> – {{.Issuer}}
            {{if .Date}}({{formatDate "2006" .Date $.Meta.Lang}}){{end}}{{if .Score}} · {{.Score}}{{end}}
          </p>
          {{end}}
        </section>
        {{end}}

        {{if .Awards}}
        <section>
          <h2>{{.Labels.Awards}}</h2>
          {{range .Awards}}
          <div class="award-item">
            <p>
              <span class="award-title">{{.Title}}</span> – {{.Awarder}}
              {{if .Date}}({{formatDate "January 2006" .Date $.Meta.Lang}}){{end}}
            </p>
            {{if .Summary}}<p class="award-summary">{{.Summary}}</p>{{end}}
          </div>
          {{end}}
        </section>
        {{end}}

        {{if .Projects}}
        <section>
          <h2>{{.Labels.Projects}}</h2>
          {{range .Projects}}
          <div class="project">
            <div class="project-header">
              {{if .Logo}}
              <img src="{{safeURL .Logo}}" alt="{{.Name}}" class="project-logo" />
              {{end}}
              {{if .URL}}
              <a href="{{safeURL .URL}}" class="project-title">{{.Name}}</a>
              {{else}}
              <span class="project-title">{{.Name}}</span>
              {{end}}
            </div>
            {{if .Description}}
            <p class="project-description">{{.Description}}</p>
            {{end}}
            {{if .StackDetails}}
            <p class="exp-details">{{.StackDetails}}</p>
            {{end}}
            {{if .Highlights}}
            <ul class="exp-missions">
              {{range .Highlights}}{{if .}}
              <li>{{.}}</li>
              {{end}}{{end}}
            </ul>
            {{end}}
          </div>
          {{end}}
        </section>
        {{end}}

        {{if .Volunteer}}
        <section>
          <h2>{{.Labels.Volunteer}}</h2>
          {{range .Volunteer}}
          <div class="experience">
            <p class="exp-title">{{.Position}}</p>
            <p class="exp-company">
              <span class="company-name">{{.Organization}}</span>
              {{if .StartDate}} ({{formatDate "January 2006" .StartDate $.Meta.Lang}}{{if or .EndDate $.Labels.Present}} - {{end}}{{if .EndDate}}{{formatDate "January 2006" .EndDate $.Meta.Lang}}{{else}}{{$.Labels.Present}}{{end}}){{end}}
            </p>
            {{if .Summary}}
            <p class="exp-summary">{{.Summary}}</p>
            {{end}}
            {{if .Highlights}}
            <ul class="exp-missions">
              {{range .Highlights}}{{if .}}
              <li>{{.}}</li>
              {{end}}{{end}}
            </ul>
            {{end}}
          </div>
          {{end}}
        </section>
        {{end}}

        {{if .Publications}}
        <section>
          <h2>{{.Labels.Publications}}</h2>
          {{range .Publications}}
          <p class="edu-item">
            {{if .URL}}<a href="{{safeURL .URL}}" style="color: var(--primary-color); text-decoration: none;"><span class="edu-degree">{{.Name}}</span></a>{{else}}<span class="edu-degree">{{.Name}}</span>{{end}}
            – {{.Publisher}}
            {{if .ReleaseDate}}({{formatDate "January 2006" .ReleaseDate $.Meta.Lang}}){{end}}
          </p>
          {{end}}
        </section>
        {{end}}
      </main>
    </div>
  </body>
</html>
